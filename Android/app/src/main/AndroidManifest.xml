<?xml version="1.0" encoding="utf-8"?>
<manifest package="co.timecrypt.android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TimecryptApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_full"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_launcher_full_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <activity
            android:name=".activities.CreateMessageActivity"
            android:icon="@mipmap/ic_launcher_full"
            android:label="@string/app_name_short"
            android:launchMode="singleInstance"
            android:roundIcon="@mipmap/ic_launcher_full_round"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LinkDisplayActivity"
            android:label="@string/app_name_short"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.ReadMessageActivity"
            android:label="@string/app_name_short"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">

            <intent-filter
                android:autoVerify="false"
                tools:ignore="UnusedAttribute">

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="timecrypt.co"
                    android:path="/"
                    android:scheme="http" />
                <data
                    android:host="timecrypt.co"
                    android:path="/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

    </application>

</manifest>